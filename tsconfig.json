{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "." /* Base directory to resolve non-absolute module names. */,
    "paths": {
      "@components/*": ["./src/components/*"],
      "@components": ["./src/components"],
      "@utils/*": ["./src/utils/*"],
      "@utils": ["./src/utils"],
      "@navigation/*": ["./src/navigation/*"],
      "@navigation": ["./src/navigation"],
      "@screens/*": ["./src/screens/*"],
      "@screens": ["./src/screens"],
      "@store/*": ["./src/store/*"],
      "@store": ["./src/store"],
      "@types/*": ["./src/types/*"],
      "@types": ["./src/types"]
    }
  },
  "include": ["./App.tsx", "src/**/*", "src/type/index.d.ts", "custom.d.ts"]
}
